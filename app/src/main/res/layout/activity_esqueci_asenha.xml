<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/esqueciasenhaactivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">
        <LinearLayout
            android:id="@+id/retanguloDetalhesEvento"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/rectangle_appbar"
            android:orientation="vertical">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/notificacao"
                android:layout_gravity="center"
                android:elevation="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="146dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="128dp"
            android:background="@drawable/round_outline"
            android:elevation="1dp"
            android:orientation="vertical"
            android:weightSum="1"
            tools:ignore="UselessLeaf">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/esquecisenha_lb_email" />

            <EditText
                android:id="@+id/emailEsqueciSenha"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="-8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/emailEsqueciSenhaErro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text=""
                android:textColor="@color/red" />
            <ProgressBar
                android:id="@+id/progressBarEsqueciSenha"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-23dp"
                android:layout_gravity="center_horizontal"
                android:max="100"
                android:minHeight="28dp"
                android:minWidth="28dp"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progress_bar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_gravity="center_horizontal"
            android:elevation="1dp"
            tools:ignore="UselessLeaf"
            android:weightSum="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:background="@drawable/button_cadastrar"
                android:textColor="#FFFFFF"
                android:text="@string/esquecisenha_bt_recover"
                android:onClick="esqueciASenha"/>
        </LinearLayout>
    </FrameLayout>
</ScrollView>